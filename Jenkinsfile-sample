pipeline {
    agent any
    stages {
        stage ('git checkout') {
            steps {
                script {
                    sh '''
                    rm -rf *
                    git clone https://github.com/hemanthkatkozu/ANSIBLE-PLAYBOOKS.git
                    ls -la
                    '''
                }
            }
        }
        stage ('Playbook-modification') {
            steps {
                sh '''
                cd $WORKSPACE/ANSIBLE-PLAYBOOKS/NGINX
                ls -la
                sed -i "s/TYPE/$REPO/g" nginx-install.yml 
                cat nginx-install.yml '''
            } 
        }
    }
}
